{
  "name": "lattice-checker",
  "type": "web",
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "port": 8080,
  "env": {
    "FLASK_ENV": "production",
    "HEADLESS": "true",
    "DONATION_AMOUNT": "50",
    "MAX_WORKERS": "5",
    "API_KEY_2CAPTCHA": "",
    "EDUPAM_DONOR_NAME": "Juan",
    "EDUPAM_DONOR_LASTNAME": "Perez",
    "EDUPAM_DONOR_EMAIL": "juan.perez@example.com"
  },
  "resources": {
    "cpu": "2000m",
    "memory": "4096Mi"
  },
  "autoscaling": {
    "min": 1,
    "max": 3,
    "cpu_threshold": 80
  },
  "health": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 5
  }
}